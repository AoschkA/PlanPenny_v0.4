<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidudvikling.zeengoone.planpennyv04" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/penny_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".Fragment_Controller" android:label="@string/app_name">
            <intent-filter android:label="@string/app_title">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PopCreateProject"
            android:theme="@style/AppTheme.PopTheme" >
        </activity>
        <activity
            android:name=".PopCreateCategory"
            android:theme="@style/AppTheme.PopTheme" >
        </activity>
        <activity
            android:name=".PopCreatePlan"
            android:theme="@style/AppTheme.PopTheme">
        </activity>
        <activity
            android:name=".ActivitySettings"
            android:theme="@style/AppTheme.PopTheme">
        </activity>
        <activity
            android:name=".ActivityHelp"
            android:theme="@style/AppTheme.PopTheme">
        </activity>
    </application>

</manifest>
