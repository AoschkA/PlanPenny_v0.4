<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/border_style">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nyt Projekt"
        android:id="@+id/textNytProjekt"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="8.5dp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3d3d3d3"
        android:layout_below="@+id/textNytProjekt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Projekt Navn"
        android:id="@+id/projectName"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@mipmap/ic_menu_archive"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/view" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:background="@drawable/border_style"
        android:layout_below="@+id/projectName"
        android:layout_alignLeft="@+id/projectName"
        android:layout_alignStart="@+id/projectName"
        android:layout_alignRight="@+id/textNytProjekt"
        android:layout_alignEnd="@+id/textNytProjekt"
        android:layout_marginLeft="-5dp"
        android:padding="5dp"/>
</RelativeLayout>