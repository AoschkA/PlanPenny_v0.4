<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryPassive"
    android:padding="5dp">

    <TextView
        android:id="@+id/kategori_liste_element2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:editable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:longClickable="false"
        android:minHeight="35sp"
        android:paddingBottom="10dp"
        android:paddingEnd="2dp"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingStart="2dp"
        android:paddingTop="10dp"
        android:text="overskrift"
        android:textColor="@color/colorSecondary"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/aendreKategori2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtkategori_liste_element"
        android:layout_centerVertical="true"
        android:background="@color/colorSecondary"
        android:hint="Indtast KategoriNavn"
        android:visibility="gone" />

    <Button
        android:id="@+id/kategoriAendringKnap2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtkategori_liste_element"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Gem"
        android:visibility="gone" />

</RelativeLayout>