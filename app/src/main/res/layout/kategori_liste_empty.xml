<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/accent"
    android:padding="5dp">

    <TextView
        android:id="@+id/kategori_liste_element2"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="overskrift"
        android:textColor="@color/colorSecondary"
        android:textSize="15dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:minHeight="35sp"
        android:editable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:layout_centerInParent="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondary"
        android:id="@+id/aendreKategori2"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:hint="Indtast KategoriNavn"
        android:layout_alignLeft="@id/kategori_liste_element" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gem"
        android:id="@+id/kategoriAendringKnap2"
        android:layout_alignBottom="@+id/kategori_liste_element"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="12/1/2015"
        android:id="@+id/txtHoejrePil2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/pil_hoejre_ny"
        android:minHeight="50dp"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:minWidth="60dp"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="12/1/2015"
        android:id="@+id/txtVenstrePil2"
        android:background="@drawable/pil_venstre_ny"
        android:minHeight="50dp"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:minWidth="60dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/aendreKategori2"
        android:layout_toRightOf="@+id/aendreKategori2"
        android:layout_toEndOf="@+id/aendreKategori2"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

</RelativeLayout>