<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#bfbfbf">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Indstillinger"
        android:id="@+id/textViewTitle"
        android:layout_weight="0.03"
        android:textColor="#eb5d3e"
        android:textSize="50dp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Projekt sorterings type"
        android:id="@+id/textViewProject"
        android:layout_weight="0.03"
        android:textSize="25dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kategori sorterings type"
        android:id="@+id/textViewCategory"
        android:layout_weight="0.03"
        android:textSize="25dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="synkroniser med google calendar"
        android:id="@+id/synchronize"
        android:layout_weight="0.03"
        android:textSize="25dp"
        android:checked="false" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HjÃ¦lp"
        android:id="@+id/textViewHelp"
        android:layout_weight="0.03"
        android:textSize="25dp" />

</LinearLayout>